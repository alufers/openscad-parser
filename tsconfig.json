{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "Node",
    "target": "esnext",
    "allowJs": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"]
}
